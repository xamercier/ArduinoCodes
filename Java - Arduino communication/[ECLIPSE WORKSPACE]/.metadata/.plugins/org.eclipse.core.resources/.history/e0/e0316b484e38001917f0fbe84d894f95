import java.util.Scanner;

public class CommUtils {

	public static void read(Scanner data) {
		String value = null;
		try {
			value = data.nextLine().toString();
			System.out.println("READING A LINE");
		} catch (Exception e) {
			e.printStackTrace();
		}
		System.out.println(value);
	}
	
