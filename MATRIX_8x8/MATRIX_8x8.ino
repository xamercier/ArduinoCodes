#include <LedControl.h>

int DIN = 26;
int CS =  25;
int CLK = 24;

byte x[8]=     {0xC3,0xE7,0x7E,0x3C,0x3C,0x7E,0xE7,0xC3};
byte a[8]=     {0x18,0x18,0x3C,0x24,0x24,0x7E,0x42,0xC3};
byte v[8]=     {0x81,0xC3,0x42,0x66,0x24,0x3C,0x18,0x18};
byte i[8]=     {0x18,0x18,0x00,0x18,0x18,0x18,0x18,0x18};
byte e[8]=     {0x7E,0x7E,0x60,0x7E,0x7E,0x60,0x7E,0x7E};
byte r[8]=     {0x00,0x7E,0x7E,0x62,0x7E,0x78,0x6C,0x66};
byte dot[8]=   {0x00,0x00,0x00,0x00,0x00,0x00,0x18,0x18};
byte m[8]=     {0xE7,0xFF,0xFF,0xDB,0xDB,0xDB,0xC3,0xC3};

LedControl lc=LedControl(DIN,CLK,CS,0);

void setup(){
 lc.shutdown(0,false);
 lc.setIntensity(0,01);
 lc.clearDisplay(0);
}

void loop(){ 

    byte smile[8]=   {0x3C,0x42,0xA5,0x81,0xA5,0x99,0x42,0x3C};
    
    printByte(smile);
     
    delay(1000);
   
    xavierm();
   
    lc.clearDisplay(0);
    
    delay(1000);
}

void xavierm()
{
  printByte(x);
  delay(1000);
  printByte(a);
  delay(1000);
  printByte(v);
  delay(1000);
  printByte(i);
  delay(1000);
  printByte(e);
  delay(1000);
  printByte(r);
  delay(1000);
  printByte(dot);
  delay(1000);
  printByte(m);
  delay(1000);
}

void printByte(byte character [])
{
  int i = 0;
  for(i=0;i<8;i++)
  {
    lc.setRow(0,i,character[i]);
  }
}

